<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/photo_root_layout">

        <SurfaceView
            android:id="@+id/photo_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <View
            android:id="@+id/photo_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/photo_background" />

        <RelativeLayout
            android:id="@+id/photo_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px200" >

            <Button
                android:id="@+id/photo_button_cancel"
                android:layout_width="100px"
                android:layout_height="109px"
                android:layout_above="@id/photo_button_take_photo"
                android:layout_centerHorizontal="true"
                android:background="@drawable/photo_button_cancel" />

            <Button
                android:id="@+id/photo_button_take_photo"
                android:layout_width="146px"
                android:layout_height="152px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/photo_button_capture" />

            <Button
                android:id="@+id/photo_button_check"
                android:layout_width="100px"
                android:layout_height="109px"
                android:layout_below="@id/photo_button_take_photo"
                android:layout_centerHorizontal="true"
                android:background="@drawable/photo_button_check" />

        </RelativeLayout>

    </RelativeLayout>

</android.widget.LinearLayout>